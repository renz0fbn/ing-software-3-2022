{% extends "/main/layoutMain.twig" %}

{% block style %}
    <link href="css/main.css" rel="stylesheet">
{% endblock %}

{% block title %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>


    <script>
        tinymce.init({
            selector: 'textarea#editor',
            menubar: false
        });
    </script>
    <title>Senati News | Has escuchar tu voz</title>
{% endblock %}

{% block content %}
    <nav class="navbar navbar-toggleable-md navbar-light bg-white fixed-top mediumnavigation">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container">
            <!-- Begin Logo -->
            <a class="navbar-brand" href="/">
                <img src="img/logoOscuro.png" alt="logo">
            </a>
            <!-- End Logo -->
            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <!-- Begin Menu -->
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Descubrir</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Expresar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user?id={{idUser}}">Mi cuenta</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Cerrar Sesión</a>
                    </li>
                </ul>
                <!-- End Menu -->
                <!-- Begin Search -->
                <!-- End Search -->
            </div>
        </div>
    </nav>


    <div class="container">
        <div class="row">

            <!-- Begin Fixed Left Share -->
            <div class="col-md-2 col-xs-12">
            </div>
            <!-- End Fixed Left Share -->

            <!-- Begin Post -->
            <div class="col-md-8 col-md-offset-2 col-xs-12">
                <div class="mainheading">

                    <!-- Begin Top Meta -->

                    <!-- End Top Menta -->
                    <h2 class="centrado">{{user}}, comparte lo que sucede en el mundo</h2>

                </div>

                <!-- Begin Featured Image -->
                <!-- class="featured-image img-fluid" src="assets/img/demopic/10.jpg" alt="" -->
                <!-- End Featured Image -->

                <!-- Begin Post Content -->

                <div class="article-post featured-image img-fluid">
                    <form action="/save/addNew" method="POST" enctype="multipart/form-data">
                        <input type="text" name="title" id="" maxlength="120" placeholder="Un buen titulo" autocomplete="off" required><br>
                        <textarea cols="60" rows="4" id="" name="resume" maxlength="350" placeholder="Un breve resumen" required></textarea>
                        <h3 id="crearN">Cuerpo de la noticia</h3>
                        <textarea cols="30" rows="50" id="summernote" name="main" class="crearnoticia" required></textarea>
                        <div class="select ">
                            <select name="category" id="format">
                                <option selected  value="Otros/Varios">Escoga un categoria</option>
                                <option value="Arte/Cultura">Arte, Cultura</option>
                                <option value="Entretenimiento">Entretenimiento</option>
                                <option value="Modernidad">Modernidad</option>
                                <option value="Clima">Clima</option>
                                <option value="Deportes">Deportes</option>
                                <option value="Desastres">Desastres y accidentes</option>
                                <option value="Ecologia">Ecologia</option>
                                <option value="Economía">Economía y Negocios</option>
                                <option value="Politica">Politica</option>
                                <option value="Mundo loco">Mundo loco</option>
                                <option value="Salud">Salud</option>
                                <option value="Sociedad">Sociedad</option>
                                <option value="Actualidad">Último momento</option>
                                <option value="Videojuegos">Videojuegos</option>
                                <option value="Otros/Varios">Otros/Varios</option>
                                <option value='nulo' >Sin tags</option>
                            </select>
                        </div>
                        <hr>
                        <span>Portada (opcional)</span><br><br>
                        <input type="file" id="file" class="form-control-file" accept="image/*" name="thumbail" onchange="loadFile(event)">
                        <br><hr>
                        <div class="subir1 pull-left"><input type="submit" value="Publicar" class="botones_crear"></div>
                        </div>
                    </form>
                    <div class="subir1 pull-right"><a style="text-decoration:none;" href="/"><input type="submit" id="salir" value="Regresar" class="botones_crear"></a>
                </div>
                </div>
            </div>
            <!-- End Post Content -->

            <!-- Begin Tags -->
            <!-- End Tags -->
            <script>
                $(document).ready(function() {

                    $('#summernote').summernote({    tabDisable: true
                        ,	"lineHeight": 1,
                        "height": 600,
                        "border": 40,
                        "codemirror": { "theme": "ambiance" },

                        placeholder: 'Expresate aquí',
                        toolbar: [
                            // [groupName, [list of button]]
                            ['style', ['bold', 'italic', 'underline', 'clear']],
                            ['font', ['strikethrough', 'superscript', 'subscript']],
                            ['fontsize', ['fontsize']],
                            ['color', ['color']],
                            ['para', ['ul', 'ol', 'paragraph']],
                            ['height', ['height']] ,['picture']
                        ], popover: {
                            image: [
                                ['image', ['resizeFull']],
                                ['float', ['floatLeft', 'floatRight', 'floatNone']],
                                ['remove', ['removeMedia']]
                            ]}
                    });

                });
            </script>



        </div>
        <!-- End Post -->

    </div>
    <!-- End Article
    ================================================== -->


    <!-- Begin Related
    ================================================== -->

    <!-- End Related Posts
    ================================================== -->

    <!-- Begin Twitter Timeline
    ================================================== -->
    <div class="container margtop3rem">
    </div>
    <!-- End Twitter Timeline
    ================================================== -->

    <!-- Begin AlertBar
    ================================================== -->

    <!-- End AlertBar
    ================================================== -->

    <!-- Begin Footer
    ================================================== -->
    <div class="container">
        <div class="footer">
            <p class="pull-left">
                Copyright &copy; 2021 Senati News
            </p>
            <div class="clearfix">
            </div>
        </div>
    </div>

{% endblock %}

